<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <EditText android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:hint="0.0"
              android:id="@+id/results"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="8dp"
              android:layout_marginRight="8dp"
              android:layout_marginLeft="8dp"
              android:layout_marginStart="8dp"
              app:layout_constraintTop_toTopOf="parent"
              android:focusable="false"
              android:focusableInTouchMode="false" app:layout_constraintHorizontal_bias="0.275"
              app:layout_constraintStart_toEndOf="@+id/newTextET" android:layout_marginTop="8dp"/>
    <EditText android:id="@+id/newTextET"
              android:layout_width="wrap_content"
              android:hint="0.0"
              android:layout_height="wrap_content"
              android:layout_marginLeft="8dp"
              android:layout_marginStart="8dp"
              android:layout_marginTop="8dp"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="8dp"
              android:layout_marginRight="8dp"
              app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.411"
              app:layout_constraintTop_toTopOf="parent"/>


    <TextView android:layout_width="wrap_content"
              android:hint="0.0"
              android:layout_height="wrap_content"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginLeft="8dp"
              android:layout_marginStart="8dp"
              android:id="@+id/operat"
              app:layout_constraintBaseline_toBaselineOf="@+id/newTextET"
              app:layout_constraintEnd_toStartOf="@+id/newTextET"
              android:layout_marginEnd="8dp"
              android:layout_marginRight="8dp"/>

    <Button android:id="@+id/num_one"
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="52dp"
            app:layout_constraintStart_toStartOf="@+id/num_four"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/num_four"/>
    <Button android:id="@+id/num_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="52dp"
            android:text="2"
            app:layout_constraintStart_toEndOf="@+id/num_one" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintBaseline_toBaselineOf="@+id/num_one"/>
    <Button android:id="@+id/num_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="52dp"
            android:text="3"
            app:layout_constraintStart_toEndOf="@+id/num_two" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintBaseline_toBaselineOf="@+id/num_two"/>
    <Button android:id="@+id/num_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="52dp"
            android:text="4"
            app:layout_constraintTop_toBottomOf="@+id/num_sev"
            app:layout_constraintStart_toStartOf="@+id/num_sev"
    />
    <Button android:id="@+id/num_five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="52dp"
            android:text="5"
            app:layout_constraintStart_toEndOf="@+id/num_four" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintBaseline_toBaselineOf="@+id/num_four"/>
    <Button android:id="@+id/num_six"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="52dp"
            android:text="6"
            app:layout_constraintStart_toEndOf="@+id/num_five" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintBaseline_toBaselineOf="@+id/num_five"/>
    <Button android:id="@+id/num_sev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="52dp"
            android:text="7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/newTextET" android:layout_marginTop="16dp"
            android:layout_marginStart="168dp" android:layout_marginLeft="168dp"/>
    <Button android:id="@+id/num_eight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="52dp"
            android:text="8"
            app:layout_constraintBaseline_toBaselineOf="@+id/num_sev" app:layout_constraintStart_toEndOf="@+id/num_sev"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
    <Button android:id="@+id/num_nine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="52dp"
            android:text="9"
            app:layout_constraintStart_toEndOf="@+id/num_eight" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintBaseline_toBaselineOf="@+id/num_eight"/>

    <Button android:id="@+id/num_zero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="52dp"
            android:text="0"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/num_two" app:layout_constraintStart_toEndOf="@+id/num_one"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
    <Button android:id="@+id/num_divide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="52dp"
            android:text="/" app:layout_constraintStart_toEndOf="@+id/num_nine" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintBaseline_toBaselineOf="@+id/num_nine"/>
    <Button android:id="@+id/num_mult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="52dp"
            android:text="*"
            app:layout_constraintStart_toEndOf="@+id/num_six"
            app:layout_constraintBaseline_toBaselineOf="@+id/num_six" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <Button android:id="@+id/num_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="52dp"
            android:text="+"
            app:layout_constraintStart_toEndOf="@+id/num_eq" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintBaseline_toBaselineOf="@+id/num_eq"/>
    <Button android:id="@+id/num_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="52dp"
            android:text="-"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toEndOf="@+id/num_three"
            app:layout_constraintBaseline_toBaselineOf="@+id/num_three"/>
    <Button android:id="@+id/num_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="52dp"
            android:text="."
            app:layout_constraintStart_toStartOf="@+id/num_one"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/num_one"/>
    <Button android:id="@+id/num_eq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="52dp"
            android:text="="
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toEndOf="@+id/num_zero"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/num_three"/>

</android.support.constraint.ConstraintLayout>